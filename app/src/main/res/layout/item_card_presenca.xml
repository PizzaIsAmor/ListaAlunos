<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_cardBackgroud"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@color/light_blue_secondary" />

    <ImageView
        android:id="@+id/_item_cardFigura"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_cardBackgroud"
        app:layout_constraintEnd_toEndOf="@+id/item_cardBackgroud"
        app:layout_constraintStart_toStartOf="@+id/item_cardBackgroud"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vec_nao_completo" />

    <TextView
        android:id="@+id/item_cardData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="#595151"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_cardBackgroud"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_cardInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/item_cardBackgroud"
        app:layout_constraintStart_toEndOf="@+id/item_cardBackgroud" />

</androidx.constraintlayout.widget.ConstraintLayout>